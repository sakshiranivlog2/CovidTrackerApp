<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="60dp"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_height="220dp"
                android:layout_margin="20dp"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="26dp"
                android:id="@+id/card1"
                android:layout_width="match_parent" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/stayhome3"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="120dp"
                android:layout_margin="20dp"
                android:id="@+id/card2"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="26dp"
                android:backgroundTint="#EC6E9C"
                android:layout_width="match_parent" >

                <TextView
                    android:layout_width="367dp"
                    android:layout_height="29dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="48dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="23sp"
                    android:text="कोविद -19 के सबसे सामान्य लक्षण"
                    android:textAlignment="center" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="26dp"
                android:id="@+id/card3"
                android:layout_width="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/drycough3"/>

                    <TextView
                        android:layout_width="159dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="सूखी खांसी"
                        android:textAlignment="center"
                        android:textSize="25sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="26dp"
                android:id="@+id/card4"
                android:layout_width="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/fever3"/>

                    <TextView
                        android:layout_width="198dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="बुखार, थकान"
                        android:textAlignment="center"
                        android:textSize="25sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="26dp"
                android:id="@+id/card5"
                android:layout_width="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/achesandpain3"/>

                    <TextView
                        android:layout_width="198dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="दर्द एवं पीड़ा"
                        android:textAlignment="center"
                        android:textSize="25sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="26dp"
                android:id="@+id/card6"
                android:layout_width="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/runnynose3"/>

                    <TextView
                        android:layout_width="198dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="बहती नाक"
                        android:textAlignment="center"
                        android:textSize="25sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="26dp"
                android:id="@+id/card7"
                android:layout_width="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/sorethroat3"/>

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="गले में खराश या दस्त"
                        android:textAlignment="center"
                        android:textSize="22sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>